{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "Microsoft.AspNetCore.SignalR": "Debug",
      "RoboticControl": "Debug"
    }
  },
  "Hardware": {
    "Host": "localhost",
    "Port": 5000,
    "ConnectionTimeoutMs": 5000,
    "CommandTimeoutMs": 3000,
